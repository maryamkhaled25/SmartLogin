// Display
function display() {
    var cartona = ''
    for (var i = 0; i < booksList.length; i++) {
        var index = i + 1;
        cartona += `
                    <tr>
                        <td>${index}</td>
                        <td>${booksList[i].Name}</td>
                        <td> <button class="btn-visit btn btn-outline-success"><a href="${booksList[i].URL}" target='_blank'>Visit</a></button></td>
                        <td><button onclick="deleteBook(${i})" class="btn btn-outline-danger">Delete</button></td>
                    </tr>
        `
    }


    document.getElementById('tbody-data').innerHTML = cartona
}


// Clear
function clearInputs() {
    bookSiteName.value = ''
    bookSiteURL.value = ''
}


// Update
function deleteBook(index) {
    booksList.splice(index, 1)
    console.log(booksList);
    window.localStorage.setItem('list', JSON.stringify(booksList))
    display()
}



function validationInputs(input, message) {
    var regex = {
        bookSiteName: /^[A-Z][a-z0-9]{2,}$/,
        bookSiteURL: /^(https?:\/\/)?[A-Z][a-z0-9]{2,}\.com$/,
        // /^(https?:\/\/)?([\da-z\.-]+)\.([a-z\.]{2,6})([\/\w \.-]*)*\/?$/
    }

    var text = input.value
    var msg = document.getElementById(message);

    if (regex[input.id].test(text)) {
        input.classList.remove('is-invalid')
        input.classList.add('is-valid')
        msg.classList.remove('d-none')
        msg.classList.add('d-none')
        return true

    } else {
        input.classList.add('is-invalid')
        input.classList.remove('is-valid')
        msg.classList.remove('d-none')

        return false
    }



}



