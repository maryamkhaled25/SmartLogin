function searchUser() {
    if (
        validInputLogin(loginEmail, emailMsgLogin) &&
        validInputLogin(loginPassword, passwordMsgLogin)
    ) {
        var found = false;

        for (var i = 0; i < usersList.length; i++) {
            if (
                usersList[i].email === loginEmail.value &&
                usersList[i].password === loginPassword.value
            ) {
                found = true;
                break;
            }
        }

        if (found) {
            console.log("valid");
            // ممكن تروحي على صفحة الترحيب مثلاً
            window.location.href = "welcome.html";
        } else {
            console.log("not valid");
            validMsgLogin.classList.remove("d-none");
        }
    }
}













































