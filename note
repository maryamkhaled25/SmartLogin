// Add
function addBook() {
    if (validationInputs(bookSiteName,'nameMsg')&&
        validationInputs(bookSiteURL,'urlMsg')) {

        var singleBook = {
            Name: bookSiteName.value,
            URL: bookSiteURL.value,
        }

